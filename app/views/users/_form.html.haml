= simple_form_for @user, html: {:class =>"form-horizontal"} do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :email, required: true
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :type_of, collection: User::TYPES_OFF,include_blank: false, required: false
    = f.association :manager ,collection: @managers,:value_method => :id,include_blank: true, required: false
  %hr
  .form-actions
    = f.button :submit
